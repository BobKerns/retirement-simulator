{
  // Inherit the project settings.
  "extends": "../tsconfig.json",
  "include": [
      "*.ts",
      "data/samples.ts"
    ],
  "exclude": [
    "node_modules"
  ],

  "references": [
    {"path": "../tsconfig.json"}
  ],

  "compilerOptions": {
    "composite": true,
    "allowSyntheticDefaultImports": true,
    "incremental": true,
    "tsBuildInfoFile": "../../build/.tsbuild-info-src-tests",
    "outDir": "../../build/test",
    "rootDir": ".."
  }
}
