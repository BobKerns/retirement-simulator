{
  // Inherit the project settings.
  "extends": "../tsconfig",
  "include": [
    "*.ts",
    "calendar/*.ts",
    "display/*.ts",
    "model/*.ts",
    "tax/*.ts",
    "data/*.json"
  ],
  "exclude": ["node_modules", "build", "__test__"],

  "compilerOptions": {
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "../build/.tsbuild-info-src",
    "outDir": "../build/src",
    "rootDir": "."
  }
}
