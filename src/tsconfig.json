{
  // Inherit the project settings.
  "extends": "../tsconfig",
  "include": [
    "*.ts",
    "calendar/*.ts",
    "display/*.ts",
    "io/*.ts",
    "model/*.ts",
    "sim/*.ts",
    "tax/*.ts",
